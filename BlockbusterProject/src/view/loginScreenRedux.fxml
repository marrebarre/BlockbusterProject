<BorderPane stylesheets="@../css/mainTheme.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginScreenController">
    <center>
        <AnchorPane prefHeight="165.0" prefWidth="394.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="username" layoutX="51.0" layoutY="89.0" prefHeight="25.0" prefWidth="296.0" promptText="Email" />
                <TextField fx:id="password" layoutX="52.0" layoutY="118.0" onAction="#handleLogin" prefHeight="25.0" prefWidth="295.0" promptText="Password" />
                <Label layoutX="52.0" layoutY="31.0" text="Bustblocker">
                    <font>
                        <Font name="Georgia" size="46.0" />
                    </font>
                </Label>
                <Button fx:id="signIn" layoutX="352.0" layoutY="90.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="56.0" prefWidth="96.0" text="Login" />
                <Label fx:id="forgotPW" layoutX="51.0" layoutY="146.0" onMouseClicked="#btnPressedForgotPW" stylesheets="@../css/mainTheme.css" text="Forgotten your password?" />
                <Label fx:id="isConnected" layoutX="48.0" layoutY="132.0" prefHeight="17.0" prefWidth="304.0" />
            </children></AnchorPane>
    </center>
    <left>
        <AnchorPane prefHeight="40.0" prefWidth="112.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <AnchorPane prefHeight="165.0" prefWidth="143.0" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <AnchorPane prefHeight="210.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="showID" layoutX="99.0" layoutY="37.0" />
                <Button fx:id="btnCreateAccount" layoutX="172.0" mnemonicParsing="false" onAction="#btnPressedCreateAccount" prefHeight="37.0" prefWidth="137.0" text="Create account" />
            <ImageView fitHeight="141.0" fitWidth="123.0" layoutX="94.0" layoutY="54.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/inception.jpg" />
               </image>
            </ImageView>
            <ImageView fitHeight="141.0" fitWidth="123.0" layoutX="240.0" layoutY="54.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/AceVentura.jpg" />
               </image>
            </ImageView>
            <ImageView fitHeight="141.0" fitWidth="123.0" layoutX="386.0" layoutY="54.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/IngBast.jpg" />
               </image>
            </ImageView>
            <ImageView fitHeight="141.0" fitWidth="123.0" layoutX="530.0" layoutY="54.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/KingArthur.jpg" />
               </image>
            </ImageView>
            </children></AnchorPane>
    </bottom>
</BorderPane>
