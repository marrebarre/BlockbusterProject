<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/mainTheme.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginScreenController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#exitProgram" text="Exit program" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <AnchorPane prefHeight="300.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="username" layoutX="149.0" layoutY="134.0" prefHeight="25.0" prefWidth="294.0" promptText="Email" />
                <TextField fx:id="password" layoutX="149.0" layoutY="162.0" onAction="#handleLogin" prefHeight="25.0" prefWidth="295.0" promptText="Password" />
                <Button fx:id="signIn" layoutX="451.0" layoutY="131.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="56.0" prefWidth="96.0" text="Login" />
                <Label fx:id="forgotPW" layoutX="149.0" layoutY="190.0" onMouseClicked="#btnPressedForgotPW" stylesheets="@../css/mainTheme.css" text="Forgotten your password?" />
                <Label fx:id="isConnected" layoutX="36.0" layoutY="210.0" prefHeight="17.0" prefWidth="304.0" />
                <Label fx:id="showID" layoutX="207.0" layoutY="111.0" prefHeight="17.0" prefWidth="0.0" />
            <ImageView fx:id="logo" fitHeight="115.0" fitWidth="269.0" layoutX="84.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
            </children></AnchorPane>
    </center>
    <bottom>
        <AnchorPane prefHeight="100.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
                <Button fx:id="btnCreateAccount" layoutX="534.0" layoutY="36.0" mnemonicParsing="false" onAction="#btnPressedCreateAccount" prefHeight="41.0" prefWidth="140.0" text="Create account" />
         </children>
      </AnchorPane>
    </bottom>
</BorderPane>
